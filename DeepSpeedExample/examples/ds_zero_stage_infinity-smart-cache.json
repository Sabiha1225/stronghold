{
  "train_batch_size": 16,
  "gradient_accumulation_steps": 1,
  "steps_per_print": 10,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.001,
      "betas": [0.8, 0.999],
      "eps": 1e-8,
      "weight_decay": 3e-7
    }
  },
  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 0.001,
      "warmup_num_steps": 1000
    }
  },
  "zero_optimization": {
    "stage": 3,
    "allgather_partitions": true,
    "reduce_scatter": true,
    "allgather_bucket_size": 50000000,
    "reduce_bucket_size": 50000000,
    "overlap_comm": true,
    "contiguous_gradients": true,
    "sub_group_size": 1e8,
    "offload_optimizer": {
      "device": "nvme",
      "nvme_path": "/mnt/nvme/",
      "pin_memory": true,
      "ratio": 1.0,
      "buffer_count": 5,
      "fast_init": false
    },
    "offload_param": {
      "device": "nvme",
      "nvme_path": "/mnt/nvme/",
      "pin_memory": true,
      "buffer_count": 5,
      "buffer_size": 3e9,
      "max_in_cpu": 0
    }
  },
  "gradient_clipping": 1.0,
  "fp16": {
    "enabled": true,
    "fp16_master_weights_and_grads": false,
    "loss_scale": 0,
    "loss_scale_window": 1000,
    "hysteresis": 2,
    "min_loss_scale": 1,
    "initial_scale_power": 34
  },
  "wall_clock_breakdown": true,
  "zero_allow_untested_optimizer": false
}
